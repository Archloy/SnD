<!DOCTYPE html>
<html>
<head>
  <title>ShareNDeath</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag "style.css" %>	
  <meta http-equiv="Content-Type" content="text/xhtml;charset=UTF-8"/>
</head>
<body>
	
	<header>
		<div class="container">
				<div class="row" id="entete">
			  
					<div class="col-md-3" id="welcome">
					</div>
					
					<div class="col-md-5" id="titre">
						<h1>Share'N DEATH</h1>
					</div>
					
					<div class="col-md-2 logo">
						<img href="/images/logo.jpg" id="logo" />
					</div>
				</div>  
				
			</div>
	</header>
	
	
    <div>
    <div id="main-container" class="container">
    
        <% if current_user %>
            Signed in as <strong><%= current_user.name %></strong>
            <div class="btn-group" role="group" aria-label="...">
                <%= link_to "Sign out", signout_path, id: "sign_out", :class => "btn btn-warning" %>
            </div>


        <% else %>
        <div class="signin">
			<%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in", :class => "btn btn-primary" %>
        </div>
        <% end %>

        <%= yield %>

    </div>
    </div>

</body>
</html>
